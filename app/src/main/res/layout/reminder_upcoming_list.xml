<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <RelativeLayout
        android:id="@+id/upcomingreminderlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/upcomingreminderdot1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/dot1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/upcomingremindertxtmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/upcomingreminderdot1"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="JIO Recharge"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    </RelativeLayout>

</LinearLayout>