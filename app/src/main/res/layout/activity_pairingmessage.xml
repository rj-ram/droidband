<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pairingmessage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/paymentsummaryqrcodelayout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/paymentsummaryqrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/verified"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/paymentsummarybookingid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pairing Successful"
            android:textColor="#FD8229"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="16dp"
            android:layout_below="@id/paymentsummaryqrcodelayout"/>

    </RelativeLayout>

</RelativeLayout>