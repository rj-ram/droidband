<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personalinfo">

    <RelativeLayout
        android:id="@+id/personalinfohead"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/profileback"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/personalinfobackicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/personalinfobacktext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/personalinfobackicon"
                android:layout_marginLeft="10dp"
                android:text="Profile"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/personalinfoheadtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="Personal Information"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="18dp"/>

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personalinfouserimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/pro2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/personalinfousername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/personalinfouserimage"
            android:layout_marginTop="20dp"
            android:text="User Name"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="18dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personalinfobody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/personalinfohead">

        <TextView
            android:id="@+id/personalinfobottomtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="Personal Information"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="#FFA851"
            android:textSize="16dp"/>

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FD8229"
            android:layout_marginTop="30dp"
            android:layout_below="@id/personalinfobottomtxt"/>

        <RelativeLayout
            android:id="@+id/personalinfodevice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/view7"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/personalinfouseremail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL :"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#FFA851"
                android:textSize="12dp"/>


        </RelativeLayout>

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FD8229"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personalinfodevice"/>

        <RelativeLayout
            android:id="@+id/personalinfopersonal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/view8"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/personalinfopersonheight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEIGHT :"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#FFA851"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/personalinfopersonweight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="WEIGHT :"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#FFA851"
                android:textSize="12dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FD8229"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personalinfopersonal"/>

        <RelativeLayout
            android:id="@+id/personalinfoconnected"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/view9"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/personalinfouserphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE :"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#FFA851"
                android:textSize="12dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FD8229"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personalinfoconnected"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personalinfobottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/pesonalinfobottomimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pro3"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/dot"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/pesonalinfobottomimg"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/dot"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pesonalinfobottomimg"
            android:layout_marginLeft="30dp"/>

    </RelativeLayout>

</RelativeLayout>