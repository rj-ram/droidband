<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <RelativeLayout
        android:id="@+id/remindercontentlayout"
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <ImageView
            android:id="@+id/remindercontentdot1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/dot5"/>

        <TextView
            android:id="@+id/remindercontenttxtmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/remindercontentdot1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="JIO Recharge"
            android:textColor="#000000"
            android:textSize="9dp" />

    </RelativeLayout>

</LinearLayout>