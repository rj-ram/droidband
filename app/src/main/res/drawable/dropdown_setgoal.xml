<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#ffffff"
                        android:endColor="#ffffff"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="#E00072" />
                    <corners
                        android:radius="10dp" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>

                </shape>
            </item>

            <item>

                <bitmap
                    android:src="@drawable/down3"
                    android:gravity="center|right" />
            </item>

        </layer-list>

    </item>

</selector>